<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vincent.calculator.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:text="0"
        android:textColor="#0e0e0e"
        android:gravity="center_vertical|end"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ecece8"
        />
    <!--7 8 9 + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Button07"
            android:text="7"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button08"
            android:text="8"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button09"
            android:text="9"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonJia"
            android:text="+"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <!--4 5 6 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Button04"
            android:text="4"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button05"
            android:text="5"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button06"
            android:text="6"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonJian"
            android:text="-"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <!--1 2 3 × -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Button01"
            android:text="1"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button02"
            android:text="2"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/Button03"
            android:text="3"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonCheng"
            android:text="×"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <!--0 C = ÷ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Button00"
            android:text="0"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonC"
            android:text="C"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonDeng"
            android:text="="
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/ButtonChu"
            android:text="÷"
            android:textSize="25sp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle" />

    </LinearLayout>





</LinearLayout>